@{
    ViewBag.Title = "Home Page";
}

<div class="row">
    <div class="container-fluid carouselFormat">
        <div id="myCarousel" class="carousel slide" data-ride="carousel">
            <!-- Indicators -->
            <ol class="carousel-indicators">
                <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                <li data-target="#myCarousel" data-slide-to="1"></li>
                <li data-target="#myCarousel" data-slide-to="2"></li>
                <li data-target="#myCarousel" data-slide-to="3"></li>
                <li data-target="#myCarousel" data-slide-to="4"></li>
                <li data-target="#myCarousel" data-slide-to="5"></li>


            </ol>

            <!-- Wrapper for slides -->
            <div class="carousel-inner">
                <div class="item active">
                    <div class="test">
                        <img src="~/Content/Images/autumn-mott-15013.jpg" class="img-responsive" />
                    </div>
                    <div class="carousel-caption">
                        <h1>
                            <span>Leaf Raking</span>
                        </h1>
                    </div>
                </div>

                <div class="item">
                    <div class="test"><img src="~/Content/Images/daniel-watson-75022.jpg" class="img-responsive" /></div>
                    <div class="carousel-caption">
                        <h1>
                            <span>Lawn Mowing</span>
                        </h1>
                    </div>
                </div>

                <div class="item">
                    <div class="test">
                        <img src="~/Content/Images/filip-mroz-183687.jpg" class="img-responsive" />
                    </div>
                    <div class="carousel-caption">
                        <h1>
                            <span>Snow Shoveling</span>
                        </h1>
                    </div>
                </div>
                <div class="item">
                    <div class="test">
                        <img src="~/Content/Images/markus-spiske-104913.jpg" class="img-responsive" />
                    </div>
                    <div class="carousel-caption">
                        <h1>
                            <span>Gardening</span>
                        </h1>
                    </div>
                </div>
                <div class="item">
                    <div class="test">
                        <img src="~/Content/Images/shane-rounce-268118.jpg" class="img-responsive" />
                    </div>
                    <div class="carousel-caption">
                        <h1>
                            <span>Trash Removal</span>
                        </h1>
                    </div>
                </div>
                <div class="item">
                    <div class="test">
                        <img src="~/Content/Images/roman-kraft-60298.jpg" class="img-responsive" />
                    </div>
                    <div class="carousel-caption">
                        <h1>
                            <span>Organization</span>
                        </h1>
                    </div>
                </div>
            </div>

            <!-- Left and right controls -->
            <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="right carousel-control" href="#myCarousel" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
</div>
<div class="row">
    <div class="container landingFormat">
        <img src="~/Content/Images/Logomakr_revised.png" />
        <h2>Just Neighbors Helping Neighbors</h2>
        <h3>Here's How It Works</h3>
        <br />
        <h4>
            You can request or offer assistance within your neighborhood.<br />
            To get started, simply click on the "Request Help" or "Tasks" buttons below.<br />
            We're Just Neighbors Helping Neighbors.
        </h4>
        <div>
            <a href="@Url.Action("Create", "Task2")" class="btn ask">REQUEST HELP</a>
            <a href="@Url.Action("Index", "Task2")" class="btn help">TASKS</a>
        </div>
    </div>
</div>
